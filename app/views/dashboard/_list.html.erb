<h2>Listing Today's entries</h2>

<div id="first">
  <h4>Today's Calories</h4>

    <table>
      <thead>
        <tr>
          <th>Date</th>
          <th>Number</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @calorics.each do |caloric| %>
          <tr>
            <td><%= caloric.date %></td>
            <td><%= caloric.number %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
</div>

<div id="second">

  <h4>Today's Exercises</h4>

  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Type</th>
        <th>Duration</th>
        <th>Calories Burned</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @exercises.each do |e| %>
        <tr>
          <td><%= e.date %></td>
          <td><%= e.exercise_type_id %></td>
          <td><%= e.duration %></td>
          <td><%= e.calories_burned %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<div id="third">
  <h4>Today's Steps</h4>

  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Number</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @steps.each do |step| %>
        <tr>
          <td><%= step.date %></td>
          <td><%= step.number %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div id="fourth">
  <h4>Today's Weight</h4>

  <table>
    <thead>
      <tr>
        <th>Date</th>
        <th>Number</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @weights.each do |weight| %>
        <tr>
          <td><%= weight.date %></td>
          <td><%= weight.number %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
