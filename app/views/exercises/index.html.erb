<p id="notice"><%= notice %></p>

<h1>Listing Exercises</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Type</th>
      <th>Duration</th>
      <th>Calories Burned</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @exercises.each do |e| %>
      <tr>
        <td><%= e.date %></td>
        <td><%= e.exercise_type_id %></td>
        <td><%= e.duration %></td>
        <td><%= e.calories_burned %></td>
        <td><%= link_to 'Show', e %></td>
        <td><%= link_to 'Edit', edit_exercise_path(e) %></td>
        <td><%= link_to 'Destroy', e, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

